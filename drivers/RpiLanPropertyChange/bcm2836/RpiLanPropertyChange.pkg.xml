<?xml version="1.0" encoding="utf-8"?>
<!-- TODO: Make sure to set the Package attributes -->
<Package xmlns="urn:Microsoft.WindowsPhone/PackageSchema.v8.00"
  Owner="$(OEMNAME)"
  OwnerType="OEM"
  Platform="$(BSPARCH)"
  Component="RPi"
  SubComponent="RpiLanPropertyChange"
  ReleaseType="Production" >
  
  <Components>
    <OSComponent>
      <Files>
        <File Source="$(_RELEASEDIR)RpiLanPropertyChange.dll" DestinationDir="$(runtime.system32)" />
      </Files>
    </OSComponent>
    <Service
        Description="RpiLanPropertyChange"
        DisplayName="RpiLanPropertyChange"
        ErrorControl="Normal"
        Name="RpiLanPropertyChange"
        Start="Auto"
        SvcHostGroupName="WPTCBNoNetwork"
        Type="Win32ShareProcess"
		IsTCB="Yes"
        >
      <FailureActions ResetPeriod="86400">
        <Action
            Delay="0"
            Type="None"
            />
      </FailureActions>
      <ServiceDll
          ServiceMain="ServiceMain"
          Source="$(_RELEASEDIR)\RpiLanPropertyChange.dll"
          UnloadOnStop="true"
          />
    </Service>
  </Components>
</Package>